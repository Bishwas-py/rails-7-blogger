<div class="container">
  <div class="d-flex justify-content-between">
    <h1>All Blogs</h1>
    <%= link_to "New post", new_post_path, class: "btn rounded btn-info" %>

  </div>

  <div id="posts">
    <% @posts.each do |post| %>
      <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
          <%= render post %>
        </div>
      </div>
    <% end %>
  </div>
</div>
