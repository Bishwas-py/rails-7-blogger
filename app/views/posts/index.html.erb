<div class="container">

  <h1>Our Blog</h1>

  <div id="posts">
    <% @posts.each do |post| %>
      <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
          <%= render post %>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "New post", new_post_path %>
</div>
